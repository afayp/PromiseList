<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/ivory"
    android:elevation="5dp">

    <LinearLayout
        android:id="@+id/ll_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_projects"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_menu"
            android:background="@drawable/icon_default_selector"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_search"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_default_selector"/>

        <ImageView
            android:id="@+id/iv_sort"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_sort"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_default_selector"/>


        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_more"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_default_selector"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_blue_left_arrow"
            android:background="@drawable/icon_default_selector"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_palette"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_palette"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_default_selector"/>

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_tag_grey"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_default_selector"/>

        <ImageView
            android:id="@+id/iv_fixed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_fixed"
            android:layout_marginLeft="20dp"
            android:background="@drawable/icon_default_selector"/>

         <ImageView
            android:id="@+id/iv_date"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_date"
             android:layout_marginLeft="20dp"
             android:background="@drawable/icon_default_selector"/>

         <!--<ImageView
            android:id="@+id/iv_bell"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_bell"
             android:layout_marginLeft="20dp"
             android:background="@drawable/icon_default_selector"/>-->

        <ImageView
            android:id="@+id/iv_more_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_more"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/icon_default_selector"/>

    </LinearLayout>



</FrameLayout>