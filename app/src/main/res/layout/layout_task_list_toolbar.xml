<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@color/main_toolbar_bg"
    android:elevation="@dimen/toolbar_elevation">

    <LinearLayout
        android:id="@+id/ll_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_projects"
            android:src="@drawable/ic_menu_grey"
            style="@style/btnStyle"
            android:layout_marginLeft="@dimen/toolbar_left_space" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/toolbar_title_text_size"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_search"
            android:src="@drawable/ic_search_grey"
            style="@style/btnStyle"/>

        <ImageView
            android:id="@+id/iv_sort"
            style="@style/btnStyle"
            android:src="@drawable/ic_sort_by_time" />

        <ImageView
            android:id="@+id/iv_more"
            android:src="@drawable/ic_more_grey"
            style="@style/btnStyle"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/iv_back"
            style="@style/btnStyle"
            android:src="@drawable/ic_arrow_left"
            android:layout_marginLeft="@dimen/toolbar_left_space"/>

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1"
            android:textSize="@dimen/toolbar_title_text_size"
            android:layout_marginLeft="10dp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/iv_palette"
            android:src="@drawable/ic_palette"
            style="@style/btnStyle"/>

        <ImageView
            android:id="@+id/iv_tag"
            android:src="@drawable/ic_tag_grey"
            style="@style/btnStyle"/>

        <ImageView
            android:id="@+id/iv_fixed"
            android:src="@drawable/ic_fixed"
            style="@style/btnStyle"/>

        <ImageView
            android:id="@+id/iv_project"
            android:src="@drawable/ic_package_grey"
            style="@style/btnStyle"/>


        <ImageView
            android:id="@+id/iv_date"
            android:src="@drawable/ic_calendar_grey"
            style="@style/btnStyle"/>

        <ImageView
            android:id="@+id/iv_more_select"
            android:src="@drawable/ic_more_grey"
            style="@style/btnStyle"
            android:layout_marginRight="10dp" />

    </LinearLayout>

</FrameLayout>