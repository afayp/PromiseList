        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/iv_fixed"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_fixed_blue"
